<body>
        <%- include('../parsials/header.ejs') %>
        <% if(isLogin && role === 'admin'){ %>
            <%- include('../parsials/navbarafterAdmin.ejs') %>
        <% }else if(isLogin && role !== 'admin'){ %>
            <%- include('../parsials/navbarafter.ejs') %>
        <% }else{ %>
            <%- include('../parsials/navbarbefore.ejs') %>
        <% } %>
    <div tag= 'homeSearchBar' style='width: 100%; text-align: center; padding-top:100px'>
        <form action = '/statusreport', method ='POST' style ='width: 100%' name='AWB'>
            <% if(error){ %>
                <input type='text' style='width: 250px; height: 30px; display:inline-block' name='AWB' placeholder="<%=error %>" >
            <% }else{ %>
                <input type='text' style='width: 250px; height: 30px; display:inline-block' name='AWB' placeholder="Input your AWB here" >
            <% } %>
            <button type="submit">submit</button>
            <button type="button">QR</button>
        </form>
   
            
    </div>
